<body>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="well well-sm">
          <form class="form-horizontal" method="post" action="/users/register">
            <fieldset> 
                <div class="form-group">
                    <span class="col-md-1 col-md-offset-2 text-center"><i
                        class="fa fa-user bigicon"
                    ></i></span>
                    <div class="col-md-8">
                    <input
                        id="name"
                        name="name"
                        type="text"
                        placeholder="Nombre"
                        class="form-control"
                        value="{{name}}"
                    />
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-1 col-md-offset-2 text-center"><i
                        class="fa fa-phone-square bigicon"
                    ></i></span>
                    <div class="col-md-8">
                    <input
                        id="phone"
                        name="phone"
                        type="text"
                        placeholder="TelÃ©fono"
                        class="form-control"
                        value="{{phone}}"
                    />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 text-center">
                    <button
                        type="submit"
                        class="btn btn-primary btn-lg"
                    >Enviar</button>
                    </div>
                </div>
                </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>