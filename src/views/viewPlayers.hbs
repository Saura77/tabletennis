<body>
  {{#each players}}
    <div class="row m-5">
      <div class="card">
        <div class="card-body">
          {{name}}
          {{last_name}} <br>
          {{phone}}
        </div>
      </div>
    </div>
  {{/each}}
  {{#else}}
        <div class="card mx-auto">
            <div class="card-body">
                No hay jugadores registrados
            </div>
        </div>
  {{/else}}
</body>