<body>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="well well-sm d-flex flex-column">
            <h1 class="text-center my-5">Necesitamos ciertos datos para el proceso de registro</h1>
          <form class="form-horizontal" method="post" action="/players/register">
            <fieldset> 
                <div class="form-group form_register_item my-3">
                    <span class="col-md-1 col-md-offset-2 text-center"><i
                        class="fa fa-user bigicon"
                    ></i></span>
                    <div class="col-md-8">
                    <input
                        id="fname"
                        name="name"
                        type="text"
                        placeholder="Nombre"
                        class="form-control"
                        value="{{name}}"
                    />
                    </div>
                </div>

                <div class="form-group form_register_item my-3">
                    <span class="col-md-1 col-md-offset-2 text-center"><i
                        class="fa fa-user bigicon"
                    ></i></span>
                    <div class="col-md-8">
                    <input
                        id="lname"
                        name="last_name"
                        type="text"
                        placeholder="Apellido"
                        class="form-control"
                        value="{{last_name}}"
                    />
                    </div>
                </div>

                <div class="form-group form_register_item my-3">
                    <span class="col-md-1 col-md-offset-2 text-center"><i
                        class="fa fa-phone-square bigicon"
                    ></i></span>
                    <div class="col-md-8">
                    <input
                        id="phone"
                        name="phone"
                        type="text"
                        placeholder="TelÃ©fono"
                        class="form-control"
                        value="{{phone}}"
                    />
                    </div>
                </div>

                <input
                        name="id_user"
                        type="hidden"
                        class="form-control"
                        value="{{id_user}}" 
                />

                <div class="form-group form_register_item my-3">
                    <div class="col-md-12 text-center">
                    <button
                        type="submit"
                        class="btn btn-primary btn-lg bg-success"
                    >Enviar</button>
                    </div>
                </div>
                </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>